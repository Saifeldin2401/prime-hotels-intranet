# ========================================
# PRIME HOTELS INTRANET - SECURE CONFIGURATION
# ========================================
# 
# SECURITY NOTICE:
# - Never commit this file with real values to version control
# - Use environment-specific files (.env.development, .env.production)
# - Rotate keys regularly (every 90 days recommended)
# - Use Supabase Dashboard for sensitive operations

# ========================================
# SUPABASE CONFIGURATION
# ========================================
# Get these from: https://supabase.com/dashboard/project/your-project-id/settings/api
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Service Role Key (backend only - NEVER expose to client)
# Use this for server-side operations only
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database URL (for migrations and admin operations)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# ========================================
# APPLICATION CONFIGURATION
# ========================================
VITE_APP_NAME=Prime Hotels Intranet
VITE_APP_DESCRIPTION=Multi-property hotel management system
VITE_APP_VERSION=1.0.0
VITE_APP_URL=http://localhost:5173

# ========================================
# ENVIRONMENT CONFIGURATION
# ========================================
VITE_NODE_ENV=development
VITE_DEV_MODE=true
VITE_API_BASE_URL=http://localhost:5173/api

# Mock Authentication (development only)
VITE_MOCK_AUTH=false

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Session Management
VITE_SESSION_TIMEOUT_MINUTES=60
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION_MINUTES=15

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS_PER_MINUTE=100
VITE_RATE_LIMIT_WINDOW_MS=60000

# Content Security Policy
VITE_CSP_ENABLED=true
VITE_CSP_REPORT_ONLY=false

# ========================================
# FEATURE FLAGS
# ========================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_DEBUG_MODE=false

# ========================================
# THIRD-PARTY INTEGRATIONS
# ========================================
# Email Service (optional)
VITE_EMAIL_SERVICE_PROVIDER=none
VITE_EMAIL_FROM_EMAIL=noreply@primehotels.com
VITE_EMAIL_FROM_NAME=Prime Hotels

# File Storage
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# ========================================
# LOGGING AND MONITORING
# ========================================
VITE_LOG_LEVEL=info
VITE_ENABLE_AUDIT_LOGGING=true
VITE_ENABLE_PII_ACCESS_LOGS=true

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================
# Database connection pooling
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis (for session storage - optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ========================================
# PRODUCTION CONFIGURATION
# ========================================
# SSL/TLS
VITE_FORCE_HTTPS=true
VITE_SSL_CERT_PATH=/path/to/cert.pem
VITE_SSL_KEY_PATH=/path/to/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ========================================
# COMPLIANCE AND AUDIT
# ========================================
# GDPR Compliance
VITE_GDPR_COMPLIANCE_ENABLED=true
VITE_DATA_RETENTION_DAYS=365
VITE_ANONYMIZATION_ENABLED=true

# Audit Trail
VITE_AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
VITE_SENSITIVE_OPERATION_LOGGING=true

# ========================================
# TESTING CONFIGURATION
# ========================================
VITE_TEST_DATABASE_URL=postgresql://postgres:test@localhost:5433/prime_hotels_test
VITE_ENABLE_TEST_DATA_SEEDING=true
